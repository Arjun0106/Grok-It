<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/googlepng"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/googlefntd"
        android:text="Grok-It"
        android:textSize="55sp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/splash_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/googlefntd"
        android:text="with Gemini"
        android:textSize="20sp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/splash_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/googlefntd"
        android:text="Done by"
        android:textSize="25sp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/splash_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/googlefntd"
        android:text="Arjunsiva"
        android:textSize="40sp"
        android:textColor="#FFFFFF" />

  </RelativeLayout>